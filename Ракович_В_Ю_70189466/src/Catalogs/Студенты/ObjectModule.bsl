// Расчет ИМТ при изменении роста/веса
Процедура АнтропометрияПриИзменении(Элемент)
    Если Элемент.Рост > 0 И Элемент.Вес > 0 Тогда
        Элемент.ИМТ = Элемент.Вес / ((Элемент.Рост/100) * (Элемент.Рост/100));
    КонецЕсли;
КонецПроцедуры

// Определение группы здоровья по ИМТ
Функция ОпределитьГруппуЗдоровьяПоИМТ() Экспорт
    Если Антропометрия.Количество() > 0 Тогда
        ПоследняяЗапись = Антропометрия[Антропометрия.Количество()-1];
        Если ПоследняяЗапись.ИМТ < 18.5 Тогда
            Возврат "II";
        ИначеЕсли ПоследняяЗапись.ИМТ >= 18.5 И ПоследняяЗапись.ИМТ <= 24.9 Тогда
            Возврат "I";
        ИначеЕсли ПоследняяЗапись.ИМТ >= 25 И ПоследняяЗапись.ИМТ <= 29.9 Тогда
            Возврат "II";
        Иначе
            Возврат "III";
        КонецЕсли;
    КонецЕсли;
    Возврат "";
КонецФункции